{
    "version": 2,
    "builds": [
      {
        "src": "./build/client/index.html",
        "use": "@vercel/static-build",
        "config": {}
      }
    ],
    "routes": [
      {
        "src": "/.*",
        "dest": "/"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://your-api-url.com/api/$1"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'elf'; script-src 'elf' https://cdn.jsdelivr.net; style-src 'elf' https://fonts.googleapis.com;"
          }
        ]
      }
    ]
  }